<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IottiMobileApp"
             xmlns:classes="clr-namespace:IottiMobileApp.Classes"
             x:Class="IottiMobileApp.App">
    
    <!-- inclusione stili globali -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <classes:ItemCountToHeightConverter x:Key="ItemCountToHeightConverter" 
                                          ItemHeight="50" 
                                          MaxHeight="250" />
    </Application.Resources>
    
</Application>
