<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:scanner="clr-namespace:BarcodeScanning;assembly=BarcodeScanning.Native.Maui"
             x:Class="IottiMobileApp.Views.CameraPage"
             Title="Rilevazione codici a barre"
             xmlns:viewModels="clr-namespace:IottiMobileApp.ViewModels">
    
    <scanner:CameraView x:Name="cameraView"
                    OnDetectionFinished="CameraView_OnDetectionFinished"
                    ViewfinderMode="true"
